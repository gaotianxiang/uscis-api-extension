{
  "manifest_version": 3,
  "name": "USCIS Case API Viewer",
  "version": "1.0.0",
  "description": "Fetches and displays USCIS case API responses for receipt numbers found on the applicant page.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://my.uscis.gov/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://my.uscis.gov/account/applicant*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
